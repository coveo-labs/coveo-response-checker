{
	"manifest_version": 2,
	"name": "Coveo Response Checker",
	"short_name": "coveo-response-checker",
	"version": "1.0",
	"description": "A Chrome extension to check the responses sent to the Coveo Organization.",

	"icons": {
		"16": "images/16.png",
		"48": "images/48.png",
		"128": "images/128.png"
	},
	"background": {
		"scripts": ["js/background.js"]
	},
	"browser_action": {
		"default_icon": "/images/inspectGoodC.png",
		"default_popup2": "/popup.html"
	},

	"content_scripts": [{
		"run_at": "document_end",
		"matches": [
			"<all_urls>"
		],
		"js": [
			"/dependencies/jquery-2.2.4.min.js","/js/select.js","/js/recorder.js","/js/content.js"
		],
		"css": [
			"/css/inject.css"
		],
		"all_frames": false
	}],
	"permissions": [
		"activeTab",
		"tabs",
		"webRequest",
		"webRequestBlocking",
    "*://*/"
	]

}
